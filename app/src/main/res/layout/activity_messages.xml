<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessagesActivity"
    android:id="@+id/drawer_layout">

        <!-- Drawer-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:theme="@style/navigationTheme"
        android:background="@color/light_white"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />


            <!--Content-->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:background="#f2f2f2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/burger_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/menu_icon" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/Learnize"
                android:fontFamily="@font/bad_script"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_centerHorizontal="true"
                android:text="@string/slogan"
                android:fontFamily="@font/bad_script"
                android:textColor="@color/black"
                android:textSize="13sp" />


            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messages"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="35sp"
            android:fontFamily="@font/allan"
            android:textColor="@color/black"/>

        <TableLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="10dp"
            android:background="#A0A0A0">

            <TableRow
                android:id="@+id/msg1"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/messages_read_icon"/>

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/hours_of_operation_of_administrative_offices"
                    android:textColor="@color/black"
                    android:fontFamily="@font/allan"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:id="@+id/msg2"
                android:layout_marginTop="10dp"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/message_icon"/>

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/there_is_a_submission_of_a_new_work_on_the_website_of_the_course_analysis_systems"
                android:textColor="@color/black"
                android:fontFamily="@font/allan"
                android:layout_gravity="center_vertical"/>

            </TableRow>
            <TableRow
                android:id="@+id/msg3"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/message_icon"/>

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/allan"
                    android:text="@string/work_submission_permit_student_username"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow
                android:id="@+id/msg4"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/messages_read_icon"/>

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allan"
                    android:text="@string/an_online_lesson_reminder_that_will_start_in_a_few_minutes_sql_databases"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

            </TableRow>
            <TableRow
                android:id="@+id/msg5"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/message_icon"/>

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/allan"
                    android:text="@string/invitation_to_an_online_meeting_on_full_stack_react_ui"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>
            </TableRow>
            <TableRow
                android:id="@+id/msg6"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/messages_read_icon"/>

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allan"
                    android:text="@string/a_reminder_of_an_online_lesson_that_will_begin_in_a_few_more_minutes_developing_applications_for_android"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

            </TableRow>
            <TableRow
                android:id="@+id/msg7"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/message_icon"/>

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/mosaab_abo_rkia_has_joined_your_personal_meeting_room"
                    android:textColor="@color/black"
                    android:fontFamily="@font/allan"
                    android:layout_gravity="center_vertical"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>