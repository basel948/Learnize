                <TextView
                    android:layout_marginStart="15dp"
                    android:width="85dp"
                    android:gravity="center"
                    android:fontFamily="@font/allan"
                    android:textColor="@color/black"
                    android:text="@string/wednesday"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:width="85dp"
                    android:gravity="center"
                    android:text="@string/thursday"
                    android:fontFamily="@font/allan"
