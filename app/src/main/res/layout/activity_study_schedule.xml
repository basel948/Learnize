                    android:width="55dp"
                    />

                <TextView
                    android:layout_marginStart="15dp"
                    android:width="55dp"
                    android:gravity="center"
                    android:fontFamily="@font/allan"
                    android:textColor="@color/black"
                    android:text="@string/subject_sql"
